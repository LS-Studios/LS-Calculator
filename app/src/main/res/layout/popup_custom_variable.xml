<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupCustomVariableCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dark_main_2"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popupCustomVariableTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create custom variable"
            android:textAlignment="center"
            android:textColor="@color/dark_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popupCustomVariableNameNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Name:"
                android:textAlignment="center"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/popupCustomVariableNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@color/dark_text"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_text"
                android:textColorHint="#66CCCCCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popupCustomVariableValueNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Value:"
                android:textAlignment="center"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/popupCustomVariableValueEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:backgroundTint="@color/dark_text"
                android:inputType="number"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"
                android:text="0.0"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_text"
                android:textColorHint="#66CCCCCC" />

        </LinearLayout>

        <Button
            android:id="@+id/popupCustomVariableConfirmBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/dark_main_1"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/dark_text" />

    </LinearLayout>

</androidx.cardview.widget.CardView>