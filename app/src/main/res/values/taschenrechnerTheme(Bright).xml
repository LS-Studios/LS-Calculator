<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyTaschenrechner.Bright" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:itemBackground">@color/bright_main_2</item>
        <item name="actionOverflowMenuStyle">@style/Theme.MyTaschenrechner.Bright.PopUpBG</item>
        <item name="actionOverflowButtonStyle">@style/Theme.MyTaschenrechner.Bright.PopUpIcon</item>
        <item name="listMenuViewStyle">@style/Theme.MyTaschenrechner.Bright.ListMenuViewStyle</item>
    </style>

    <style name="Theme.MyTaschenrechner.Bright.ListMenuViewStyle" parent="Base.Widget.AppCompat.ListMenuView">
        <item name="subMenuArrow">@drawable/ic_menu_arrow_bright_theme</item>
    </style>

    <style name="Theme.MyTaschenrechner.Bright.PopUpBG" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:popupBackground">@drawable/options_menu_bright</item>
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">-50dip</item>
    </style>

    <style name="Theme.MyTaschenrechner.Bright.PopUpIcon" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/bright_text</item>
    </style>
</resources>